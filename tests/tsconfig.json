{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2020"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "@types/jest",
      "@types/node"
    ]
  },
  "paths": {
    "$shared": [
      "shared"
    ],
    "$shared/*": [
      "shared/*"
    ],
  },
  "include": [
    "./**.ts",
  ],
}